{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Schema for a Level-1 (Design) DSpec. Defines the architecture, consistency groups (aggregates), and commands to satisfy the Level-0 intent.",
  "required": [
    "extends",
    "consistency_groups"
  ],
  "properties": {
    "extends": {
      "type": "string",
      "description": "The ID of the Level-0 Feature Spec that this design refines."
    },
    "consistency_groups": {
      "type": "array",
      "description": "Definitions of consistency boundaries (often called Aggregates in DDD) where invariants are enforced.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID for the consistency group."
          },
          "name": {
            "type": "string",
            "description": "Human-readable name (e.g., 'OrderAggregate')."
          }
        }
      }
    },
    "commands": {
      "type": "array",
      "description": "List of Commands (state-change requests) designed to fulfill the feature's intent.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "intent",
          "target",
          "preconditions",
          "postconditions"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID for the command (e.g., 'cmd.submit-order')."
          },
          "name": {
            "type": "string",
            "description": "Name of the command, typically VerbNoun (e.g., 'SubmitOrder')."
          },
          "target": {
            "type": "string",
            "description": "The target Consistency Group or Entity ID that handles this command."
          },
          "intent": {
            "type": "string",
            "description": "Brief description of what this command achieves."
          },
          "preconditions": {
            "type": "array",
            "description": "List of Invariant IDs that must be true *before* this command can succeed.",
            "items": {
              "type": "string"
            }
          },
          "postconditions": {
            "type": "object",
            "description": "The outcome of the command if successful.",
            "properties": {
              "emits": {
                "type": "array",
                "description": "List of Domain Event IDs emitted by this command.",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "transactional_expectation": {
            "type": "string",
            "description": "The transactional scope required (e.g., 'atomic-within-group')."
          },
          "failure_modes": {
            "type": "array",
            "description": "Expected failures when preconditions are violated.",
            "items": {
              "type": "object",
              "properties": {
                "violates": {
                  "type": "string",
                  "description": "The Invariant ID that caused the failure."
                },
                "outcome": {
                  "type": "string",
                  "description": "The system response (e.g., 'reject with error 409')."
                }
              }
            }
          },
          "returns": {
            "type": "object",
            "description": "Optional data returned to the caller (allowing for non-CQRS designs).",
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "type": "string",
                "description": "Type of data returned (e.g., 'OrderId', 'UpdatedBalance')."
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "queries": {
      "type": "array",
      "description": "List of Queries (data retrieval requests). Together with Commands, these form the 'Use Cases' of the system.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "intent",
          "returns"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID for the query (e.g., 'query.get-order')."
          },
          "name": {
            "type": "string",
            "description": "Name of the query, typically VerbNoun (e.g., 'GetOrder')."
          },
          "intent": {
            "type": "string",
            "description": "What information is being requested and why."
          },
          "parameters": {
            "type": "array",
            "description": "Input parameters required to execute the query.",
            "items": {
              "type": "object",
              "required": [
                "name",
                "type"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "optional": {
                  "type": "boolean",
                  "default": false
                }
              }
            }
          },
          "returns": {
            "type": "object",
            "description": "Definition of the data structure returned.",
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "type": "string",
                "description": "Type of data (e.g., 'OrderView', 'List<Product>')."
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
