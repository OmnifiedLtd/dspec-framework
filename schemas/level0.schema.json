{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Schema for a Level-0 (Feature) DSpec. Defines the User Intent, Scope, and Business Rules (Invariants) without specifying implementation mechanics.",
  "definitions": {
    "scopeItem": {
      "type": "object",
      "description": "A single scope item (Leaf).",
      "required": [
        "id",
        "statement"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique ID for this scope item."
        },
        "statement": {
          "type": "string",
          "description": "Description of the item."
        },
        "name": {
          "type": "string",
          "description": "Short name."
        },
        "notes": {
          "type": "string",
          "description": "Additional context."
        },
        "explicit": {
          "type": "boolean",
          "description": "If true, this is a deliberate design decision. Primarily used in 'out' scope to denote things explicitly excluded.",
          "default": false
        }
      }
    },
    "scopeGroup": {
      "type": "object",
      "description": "A group of related scope items.",
      "required": [
        "id",
        "items"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique ID for this group."
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for the group."
        },
        "description": {
          "type": "string",
          "description": "Brief description of what this group covers."
        },
        "items": {
          "type": "array",
          "description": "List of scope items within this group.",
          "items": {
            "$ref": "#/definitions/scopeItem"
          }
        }
      }
    }
  },
  "required": [
    "meta",
    "intent",
    "scope",
    "domain_invariants",
    "acceptance_criteria"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "description": "Metadata identifying the feature spec.",
      "required": [
        "id",
        "name",
        "owner",
        "domain_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this feature (e.g., 'feature.passwordless-login')."
        },
        "name": {
          "type": "string",
          "description": "Human-readable name of the feature."
        },
        "owner": {
          "type": "string",
          "description": "Team or individual responsible for this feature."
        },
        "domain_id": {
          "type": "string",
          "description": "ID of the Domain Model that provides the vocabulary for this feature."
        }
      }
    },
    "intent": {
      "type": "string",
      "description": "A high-level statement of what the user is trying to achieve and why."
    },
    "scope": {
      "type": "object",
      "description": "Defines the boundaries of the feature: what is in and what is out.",
      "required": [
        "in",
        "out"
      ],
      "properties": {
        "in": {
          "type": "array",
          "description": "List of functionalities or scenarios explicitly IN scope.",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/scopeItem"
              },
              {
                "$ref": "#/definitions/scopeGroup"
              }
            ]
          }
        },
        "out": {
          "type": "array",
          "description": "List of functionalities or scenarios explicitly OUT of scope.",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/scopeItem"
              },
              {
                "$ref": "#/definitions/scopeGroup"
              }
            ]
          }
        }
      }
    },
    "domain_invariants": {
      "type": "array",
      "description": "List of Domain Invariants (rules) that must be enforced by this feature, along with their consistency requirements.",
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Reference ID of the invariant defined in the Domain Model."
          },
          "rule": {
            "type": "string",
            "description": "The rule text (can be copied from Domain Model for readability)."
          },
          "moment_of_truth": {
            "type": "string",
            "description": "The specific event or step where this rule must be checked (e.g., 'magic-link-redeemed')."
          },
          "consistency_demand": {
            "type": "object",
            "description": "Specifies how strictly this rule must be enforced (Consistency vs. Availability trade-off).",
            "properties": {
              "scope": {
                "type": "string",
                "description": "The boundary of consistency (e.g., 'global', 'user-account', 'link')."
              },
              "strength": {
                "type": "string",
                "enum": [
                  "write-time",
                  "read-your-write",
                  "eventual"
                ],
                "description": "The required consistency level: 'write-time' (immediate), 'read-your-write' (session), or 'eventual'."
              },
              "tolerance": {
                "type": "string",
                "description": "For eventual consistency, the maximum acceptable delay (e.g., '30s', 'none')."
              }
            }
          }
        }
      }
    },
    "policy_and_regulatory": {
      "type": "array",
      "description": "Legal, compliance, or corporate policy constraints.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "statement"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID for this policy."
          },
          "statement": {
            "type": "string",
            "description": "The policy statement."
          },
          "name": {
            "type": "string",
            "description": "Short name."
          },
          "notes": {
            "type": "string",
            "description": "Context."
          }
        }
      }
    },
    "environmental_constraints": {
      "type": "array",
      "description": "External business or operational constraints (e.g., 'legacy system integration', 'regulatory requirements', 'mobile-first'). These are realities, not technical architecture decisions.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "statement"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID for the constraint."
          },
          "statement": {
            "type": "string",
            "description": "The constraint description."
          },
          "name": {
            "type": "string",
            "description": "Short name."
          },
          "notes": {
            "type": "string",
            "description": "Impact on design."
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "description": "Necessary and sufficient conditions to verify the feature is complete and correct.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "statement"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID (e.g., 'ac-001')."
          },
          "statement": {
            "type": "string",
            "description": "The criterion that must be met."
          }
        }
      }
    },
    "quality_criteria": {
      "type": "array",
      "description": "Non-functional requirements (SLOs) like latency, availability, or throughput.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "statement"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID (e.g., 'qc.latency')."
          },
          "statement": {
            "type": "string",
            "description": "The quality requirement (e.g., 'P95 latency < 200ms')."
          },
          "name": {
            "type": "string",
            "description": "Short name."
          },
          "notes": {
            "type": "string",
            "description": "Measurement context."
          }
        }
      }
    },
    "verification": {
      "type": "object",
      "description": "Links to artifacts that verify this spec (e.g., Gherkin feature files).",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "executable",
            "manual",
            "review",
            "audit",
            "attestation"
          ],
          "description": "Type of verification: 'executable' (automated tests), 'manual' (manual testing), 'review' (code/design review), 'audit' (security/compliance audit), or 'attestation' (formal sign-off)."
        },
        "artifacts": {
          "type": "array",
          "description": "List of file paths to verification artifacts (e.g., 'tests/features/login.feature').",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Dependencies on other features.",
      "properties": {
        "upstream": {
          "type": "array",
          "description": "Features that this feature depends on.",
          "items": {
            "type": "string",
            "description": "Feature ID."
          }
        },
        "downstream": {
          "type": "array",
          "description": "Features that depend on this feature.",
          "items": {
            "type": "string",
            "description": "Feature ID."
          }
        }
      }
    }
  }
}