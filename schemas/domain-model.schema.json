{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "meta",
    "glossary"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "id",
        "version"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this domain model."
        },
        "version": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "glossary": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "definition"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "definition": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "predicates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "definition"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "definition": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "lifecycles": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "required": [
            "states",
            "transitions"
          ],
          "properties": {
            "states": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "transitions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "notes": {
              "type": "string"
            }
          }
        }
      }
    },
    "invariants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "rule"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "rule": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "definition": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}